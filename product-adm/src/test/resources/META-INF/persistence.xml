<?xml version="1.0" encoding="UTF-8" ?>

<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistance_2_1.xsd">

    <persistence-unit name="java_monolith">

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.testcontainers.jdbc.ContainerDatabaseDriver" />
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
<!--            <property name="javax.persistence.jdbc.url" value="jdbc:tc:postgres:14.4://localhost:5432/java_monolith?TC_INITSCRIPT=DDL.sql" />-->
            <property name="javax.persistence.jdbc.url" value="jdbc:tc:postgresql:14.4:///java_monolith" />

            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="postgres" />
            <property name="hibernate.dialect" value="org.testcontainers.jdbc.ContainerDatabaseDriver" />
            <property name="javax.persistence.sql-load-script-source" value="DDL.sql"/>
        </properties>

    </persistence-unit>

</persistence>